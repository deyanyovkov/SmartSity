{
    "name": "transport-busyness",
    "version": "1.0.0",
    "description": "Transport Busyness Logger",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "build": "yarn run clean && tsc && yarn run copy-package && yarn run copy-modules && yarn run copy-config && yarn run copy-prisma",
        "clean": "rimraf dist/",
        "copy-package": "cp ./package.json ./dist/package.json",
        "copy-modules": "cp -R ./node_modules ./dist/node_modules",
        "copy-config": "cp -R config dist/config",
        "copy-prisma": "cp -R prisma dist/prisma",
        "copy-sql": "mkdir ./dist/src/repositories/queries && cp ./src/repositories/queries/*.sql ./dist/src/repositories/queries",
        "lint": "eslint . --ext .ts",
        "db:migrate": "npx prisma migrate deploy",
        "start": "npm run db:migrate && node ./src/index.js",
        "dev:db:migrate": "dotenv -e .env.development prisma migrate dev",
        "dev:watch": "nodemon -r ts-node/register --watch 'src/**' --ext 'ts,json,sql' --ignore 'src/**/*.test.ts' --exec 'ts-node src/index.ts'",
        "start:dev": "dotenv -e .env.development yarn run dev:watch",
        "test:db:docker:up": "docker-compose up -d",
        "test:db:docker:down": "docker-compose down",
        "test:db:migrate": "dotenv -e .env.test prisma migrate deploy",
        "test:run": "jest -i",
        "test:run:coverage": "nyc jest -i",
        "test": "dotenv -e .env.test -e .env yarn run test:run",
        "test:coverage": "dotenv -e .env.test -e .env yarn run test:run:coverage",
        "prepare": "is-ci || husky install",
        "cron": "node ./src/handlers/crons/executor.js",
        "cron:dev": "dotenv -e .env.development -e .env ts-node ./src/crons/executor.ts",
        "typedoc": "typedoc",
        "openapi": "redoc-cli bundle --output ./docs/openapi/index.html spec_v3.json"
    },
    "dependencies": {
        "@prisma/client": "3.2.1",
        "config": "^3.3.6",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "express-oas-generator": "^1.0.41",
        "helmet": "^4.6.0",
        "http-status-codes": "^2.1.4",
        "joi": "^17.4.2",
        "module-alias": "^2.2.2",
        "morgan": "^1.10.0",
        "prisma": "3.2.1",
        "swagger-jsdoc": "^6.1.0",
        "swagger-ui-express": "^4.1.6",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.1",
        "@types/config": "^0.0.39",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/helmet": "^4.0.0",
        "@types/jest": "^27.0.1",
        "@types/morgan": "^1.9.3",
        "@types/swagger-jsdoc": "^6.0.1",
        "@types/swagger-ui-express": "^4.1.3",
        "@types/uuid": "^8.3.1",
        "@typescript-eslint/eslint-plugin": "^5.2.0",
        "@typescript-eslint/parser": "^4.29.1",
        "dotenv-cli": "^4.0.0",
        "eslint": "^8.1.0",
        "eslint-config-problems": "^5.0.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "eslint-plugin-sonarjs": "^0.10.0",
        "eslint-plugin-tsdoc": "^0.2.14",
        "eslint-plugin-unicorn": "^37.0.1",
        "husky": "^7.0.2",
        "is-ci": "^3.0.0",
        "jest": "^27.0.6",
        "nodemon": "^2.0.12",
        "nyc": "^15.1.0",
        "redoc-cli": "^0.13.0",
        "ts-jest": "^27.0.4",
        "ts-node": "^10.2.0",
        "tsc-hooks": "^1.0.9-dev.20210715.1",
        "tsconfig-paths": "^3.10.1",
        "typedoc": "^0.22.5",
        "typedoc-plugin-rename-defaults": "^0.4.0",
        "typescript": "^4.3.5"
    },
    "_moduleAliases": {
        "@": "./src"
    }
}
